@Initialize{

	objEnemy = ObjEnemy_Create(OBJ_ENEMY_BOSS);
	ObjEnemy_Regist(objEnemy);
	Invuln(objEnemy, 120, 47.5, 40); //70,75
	PlayEnemyHitSound(objEnemy, 1);

	let Cole = GetCurrentScriptDirectory~"sprites/Cole_Sheet.png";
