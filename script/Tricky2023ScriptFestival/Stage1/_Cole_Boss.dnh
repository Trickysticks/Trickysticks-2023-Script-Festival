let obj;
let CSD = GetCurrentScriptDirectory;
let scriptBackground;

function LoadAllImagesInFolder(path){

	yield;
	let plist = GetFilePathList(path);
	let dlist = GetDirectoryList(path);
	
	ascent(i in 0..length(plist)){
		let cFile = plist[i];
		let fExt = cFile[length(cFile)-3..length(cFile)];
		if(fExt == "png" || fExt == "jpg" || fExt == "bmp"){
			LoadTextureInLoadThread(cFile);
		}
	}
	
	ascent(i in 0..length(dlist)){
		LoadAllImagesInFolder(dlist[i]);
	}
}


@Loading {

	LoadAllImagesInFolder(CSD~"../");
	
	
	
	
}

@Initialize {
	SetPlayerLife(6);
	//scriptBackground = LoadScript(GetCurrentScriptDirectory ~ "./NamelessPath.dnh");
	//StartScript(scriptBackground);
	
	obj = ObjEnemyBossScene_Create;
	ObjEnemyBossScene_Add(obj, 0, CSD ~ "ColeN1.dnh");
	ObjEnemyBossScene_Add(obj, 0, CSD ~ "ColeS1.dnh");
	ObjEnemyBossScene_Add(obj, 1, CSD ~ "ColeN2.dnh");
	ObjEnemyBossScene_Add(obj, 1, CSD ~ "ColeS2.dnh");
	ObjEnemyBossScene_Add(obj, 2, CSD ~ "ColeN3.dnh");
	ObjEnemyBossScene_Add(obj, 2, CSD ~ "ColeS3.dnh");
	ObjEnemyBossScene_Add(obj, 3, CSD ~ "ColeS4.dnh");
